# App
APP_ENV=prod
APP_HOST=0.0.0.0
APP_PORT=8000
ALLOWED_ORIGINS=https://www.ornekdomain.com,https://admin.ornekdomain.com

# DB (Railway Postgres)
DATABASE_URL=postgresql+asyncpg://USER:PASSWORD@HOST:PORT/DBNAME

# Admin
SESSION_IDLE_MINUTES=30
ADMIN_CODE_TTL_SECONDS=300
ADMIN_SESSION_TTL_HOURS=24

# Rate Limits
WS_USER_MSGS_PER_SEC=1
WS_USER_BURST=5
API_REQ_PER_5MIN=100

# Telegram
TELEGRAM_BOT_TOKEN=123456789:ABCDEF-your-bot-token
TELEGRAM_DEFAULT_CHAT_ID=123456789
# Güvenlik: Telegram webhook doğrulama shared-secret
TELEGRAM_WEBHOOK_SECRET=super-secret-string

# Security
CSP_DEFAULT_SRC='self'
MAX_MESSAGE_LEN=2000
OTP_HASH_SALT=lksvYZqkqnuUi4IoPXiOnxXKMHgUHC2-f-6P0YEs-_8
FORCE_HTTPS=true

# Database Pool
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30

# Request Size Limits
MAX_REQUEST_SIZE=1048576
MAX_WS_MESSAGE_SIZE=65536
MAX_JSON_PAYLOAD_SIZE=524288

# IP Whitelisting (optional, comma-separated, leave empty to disable)
ADMIN_IP_WHITELIST=
TELEGRAM_WEBHOOK_IP_WHITELIST=

# Session Management
SESSION_IDLE_TIMEOUT_MINUTES=30
SESSION_REFRESH_ENABLED=true

# WebSocket Connection Limits
WS_MAX_CLIENTS=1000
WS_MAX_ADMINS=100

# Cache Settings
CACHE_MAX_SIZE=1000
CACHE_DEFAULT_TTL=300

# Redis (Optional - leave empty to use in-memory fallback)
REDIS_URL=

